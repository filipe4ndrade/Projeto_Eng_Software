{
  "name": "projeto_eng_software",
  "version": "1.0.0",
  "description": "Sistema de Avaliação de Risco de Doenças (SARDo) utilizando o Teorema de Bayes em Node.js (Express/EJS) com CRUD e testes.",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/app.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:acceptance",
    "test:unit": "jest --config tests/jest.config.js backend/tests/unit",
    "test:integration": "jest --config tests/jest.config.js backend/tests/integration",
    "test:acceptance": "node tests/check-server.js && npx cucumber-js tests/features/frontend.feature --require tests/step_definitions/frontend.steps.js",
    "test:coverage": "jest --coverage --config tests/jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipe4ndrade/Projeto_Eng_Software.git"
  },
  "keywords": [
    "nodejs",
    "bayes",
    "crud",
    "express",
    "ejs",
    "jest",
    "cucumber"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/filipe4ndrade/Projeto_Eng_Software/issues"
  },
  "homepage": "https://github.com/filipe4ndrade/Projeto_Eng_Software#readme",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "cucumber": "^6.0.7",
    "jest": "^29.7.0",
    "puppeteer": "^24.25.0",
    "supertest": "^6.3.3"
  }
}
